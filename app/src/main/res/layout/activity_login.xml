            android:text="No recuerda su contraseña?"
            android:textAlignment="textEnd"
            android:textSize="10dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorSecondary"
        android:id="@+id/redirectMain"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/link_register"
        android:background="@null"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:id="@+id/notHaveAccount"/>

    <TextView
        android:id="@+id/registerByAnotherAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:text="Registrate por otra cuenta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/loginButtonFacebook"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_facebook_logo" />

        <ImageButton
            android:id="@+id/loginButton_Gmail"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_gmail_logo" />

        <ImageButton
            android:id="@+id/loginButtonInstagram"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_instagram_logo" />

    </LinearLayout>
</LinearLayout>